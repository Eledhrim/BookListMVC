@model BookListMVC.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h2>Book Details</h2>
<hr />

<div class="container">
    <div class="row">
        <div class="col-sm-1">
            <label asp-for="Name"></label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Name" disabled class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-1">
            <label asp-for="Author"></label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Author" disabled class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-1">
            <label asp-for="Price"></label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Price" disabled class="form-control" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-success">Edit</a>
        <a asp-action="Index" class="btn btn-sm btn-success">Back to list</a>
    </div>
</div>

