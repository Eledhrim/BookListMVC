@model IEnumerable<BookListMVC.Models.Book>
@{
    ViewData["Title"] = "Index";
}

<h3>Book List</h3>
<hr />
<p>
    <a asp-action="Create" class="btn-sm btn-primary">Create New</a> 
</p>

@if (Model.Count() > 0)
{
    //Display all books
    <div class="border">
        <table class="table">
            <tr>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th>@Html.DisplayNameFor(m => m.Author)</th>
                <th>@Html.DisplayNameFor(m => m.Price)</th>
                <th></th>
            </tr>
            @foreach (var b in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m=>b.Name)
                    </td>
                
                    <td>
                        @Html.DisplayFor(m=>b.Author)
                    </td>
                
                    <td>
                        @Html.DisplayFor(m=>b.Price)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@b.Id" class="btn btn-sm btn-success">Edit</a>
                        <a asp-action="Edit" asp-route-id="@b.Id" class="btn btn-sm btn-primary">Details</a>
                        <a asp-action="Delete" asp-route-id="@b.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <div>No Books are present. Please add a new book.</div>
}